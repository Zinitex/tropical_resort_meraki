{
    "hud_title_text": {
        "type": "stack_panel",
        "orientation": "horizontal",
        "size": ["100%cm",
            "100%c"
        ],
        "anchor_from": "right_middle",
        "anchor_to": "right_middle",
        "alpha": 0.5,
        "controls": [{
            "sidebar": {
                "type": "panel",
                "size": ["100%c",
                    "100%c"
                ],
                "offset": [0,
                    25
                ],
                "controls": [{
                    "title_background": {
                        "type": "image",
                        "alpha": 1.0,
                        "size": ["100%cm",
                            "100%c"
                        ],
                        "texture": "textures/ui/hud_tip_text_background",
                        "controls": [{
                            "title": {
                                "type": "label",
                                "text": "$title_text",
                                "anchor_from": "center_middle",
                                "anchor_to": "center_middle",
                                "color": "$tool_tip_text",
                                "text_alignment": "left",
                                "layer": 1,
                                "localize": false,
                                "font_size": "medium",
                                "alpha": 2.0
                            }
                        }]
                    }
                }]
            }
        }]
    }
}