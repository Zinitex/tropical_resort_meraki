{
    "format_version": "1.16.100",
    "minecraft:entity": {
        "description": {
            "identifier": "meraki:surf_board_1",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": [
                    "custom_ride",
                    { "surfboard": "query.is_sheared" }
                ]
            },
            "animations": {
                "custom_ride": "controller.animation.custom_ride",
                "surfboard": "animation.surfboard.take"
            }
        },
        "component_groups": {
            "minecraft:despawn": {
                "minecraft:instant_despawn": {}
            },
            "minecraft:take": {
                "minecraft:is_sheared": {}
            },
            "minecraft:can_take": {
                "minecraft:is_baby": {}
            },
            "drop": {
                "minecraft:spawn_entity": {
                    "entities": [{
                        "min_wait_time": 0,
                        "max_wait_time": 0,
                        "single_use": true,
                        "spawn_item": "meraki:surf_board_1_spawn_egg",
                        "num_to_spawn": 1
                    }]
                }
            },
            "can_ride": {
                "minecraft:can_power_jump": {},
                "minecraft:horse.jump_strength": {
                    "value": 0.0,
                    "max": 0.0
                },
                "minecraft:rideable": {
                    "rider_can_interact": true,
                    "seat_count": 1,
                    "controlling_seat": 0,
                    "seats": [{
                        "position": [0, 0.9, -0.2]
                    }],
                    "interact_text": "action.interact.ride.minecart",
                    "crouching_skip_interact": true,
                    "family_types": ["player"]
                }
            },
            "vehicle": {
                "minecraft:type_family": {
                    "family": [
                        "surfboard", "custom_animation"
                    ]
                },
                "minecraft:environment_sensor": {
                    "triggers": [{
                            "filters": {
                                "test": "is_underwater",
                                "value": false
                            },
                            "event": "on_land"
                        },
                        {
                            "filters": {
                                "test": "is_underwater",
                                "value": true
                            },
                            "event": "on_water"
                        }
                    ]
                },
                "minecraft:damage_sensor": {
                    "triggers": [{
                            "on_damage": {
                                "event": "drop",
                                "filters": {
                                    "all_of": [{
                                            "test": "rider_count",
                                            "subject": "self",
                                            "value": 0
                                        },
                                        {
                                            "test": "is_family",
                                            "subject": "other",
                                            "value": "player"
                                        }
                                    ]
                                }
                            },
                            "deals_damage": false
                        },
                        {
                            "cause": "all",
                            "deals_damage": false
                        }
                    ]
                },
                "minecraft:behavior.rise_to_liquid_level": {
                    "priority": 0,
                    "liquid_y_offset": 0.25,
                    "rise_delta": 0.01,
                    "sink_delta": 0.0
                },
                "minecraft:underwater_movement": {
                    "value": 0.105
                },
                "minecraft:navigation.walk": {
                    "can_sink": false
                },
                "minecraft:input_ground_controlled": {},
                "minecraft:health": {
                    "value": 1,
                    "max": 1
                },
                "minecraft:movement": {
                    "value": 0.025
                },
                "minecraft:movement.basic": {},
                "minecraft:collision_box": {
                    "width": 1.0,
                    "height": 0.5
                },
                "minecraft:physics": {},
                "minecraft:pushable": {
                    "is_pushable": true,
                    "is_pushable_by_piston": true
                }
            },
            "decoration": {
                "minecraft:is_charged": {},
                "minecraft:type_family": {
                    "family": [
                        "surfboard_decoration"
                    ]
                },
                "minecraft:knockback_resistance": {},
                "minecraft:health": {
                    "max": 1,
                    "min": 1,
                    "value": 1
                },
                "minecraft:pushable": {
                    "is_pushable": false
                },
                "minecraft:physics": {},
                "minecraft:damage_sensor": {
                    "triggers": [{
                        "cause": "all",
                        "deals_damage": false
                    }]
                },
                "minecraft:custom_hit_test": {
                    "hitboxes": [{
                        "pivot": [0.0, 1.0, 0.0],
                        "width": 0.75,
                        "height": 1.8
                    }]
                },
                "minecraft:collision_box": {
                    "height": 0.0,
                    "width": 0.0
                },
                "minecraft:interact": {
                    "interactions": [{
                        "on_interact": {
                            "filters": {
                                "all_of": [{
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "has_component",
                                        "subject": "self",
                                        "value": "minecraft:is_baby",
                                        "operator": "equals"
                                    }
                                ]
                            },
                            "event": "minecraft:take",
                            "target": "self"
                        },
                        "swing": true,
                        "cooldown": 0.5,
                        "interact_text": "Click to Take"
                    }]
                }
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "vehicle"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "decoration"
                    ]
                }
            },
            "minecraft:decoration": {
                "add": {
                    "component_groups": [
                        "decoration"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "vehicle"
                    ]
                }
            },
            "on_water": {
                "add": {
                    "component_groups": [
                        "can_ride"
                    ]
                }
            },
            "on_land": {
                "remove": {
                    "component_groups": [
                        "can_ride"
                    ]
                }
            },
            "drop": {
                "add": {
                    "component_groups": [
                        "drop", "minecraft:despawn"
                    ]
                }
            },
            "minecraft:take": {
                "add": {
                    "component_groups": [
                        "minecraft:take", "drop"
                    ]
                }
            },
            "minecraft:remove_take": {
                "remove": {
                    "component_groups": [
                        "minecraft:take"
                    ]
                }
            },
            "minecraft:can_take": {
                "add": {
                    "component_groups": [
                        "minecraft:can_take"
                    ]
                }
            },
            "minecraft:remove_can_take": {
                "remove": {
                    "component_groups": [
                        "minecraft:can_take"
                    ]
                }
            },
            "minecraft:despawn": {
                "add": {
                    "component_groups": [
                        "minecraft:despawn"
                    ]
                }
            }
        }
    }
}